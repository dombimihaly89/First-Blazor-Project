@page "/employeedetails/{id}"
@page "/employeedetails"
@inherits EmployeeDetailsBase

@if (Employee == null)
{
    <div class="spinner"></div>
}
else
{
    <div class="spinner"></div>
    <div class="row justify-content-center m-3">
        <div class="col-sm-8">
            <div class="card">
                <div class="card-header text-center">
                    <h1>@Employee.FirstName @Employee.LastName | @Coordinates</h1>
                </div>

                <div class="card-body text-center">
                    <img class="card-img-top imageThumbnail" src="@Employee.PhotoPath"
                         @onmousemove="@((args) => Coordinates = $"X = {args.ClientX} Y = {args.ClientY}" )" />

                    <h4>Employee ID : @Employee.EmployeeId</h4>
                    <h4>Email : @Employee.Email</h4>
                    <h4>Department : @(Employee.Department == null ? "No Department" : Employee.Department.DepartmentName)</h4>
                    <button class="btn btn-primary text-center" @onclick="@Button_Click">@ButtonText</button>
                </div>
                <div class="card-footer text-center @CssClass">
                    <a href="/" class="btn btn-primary">Back</a>
                    <a href="@($"/editemployee/{Employee.EmployeeId}")" class="btn btn-primary">Edit</a>
                    <a href="#" class="btn btn-danger">Delete</a>
                </div>
            </div>
        </div>
    </div>
}
